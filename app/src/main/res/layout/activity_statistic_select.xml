<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="rkupchinskii.scounter.StatisticSelect">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/ssType"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />

        <Spinner
            android:id="@+id/ssName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            />

        <Spinner
            android:id="@+id/ssAgr"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:entries="@array/statistic_aggr"

            />

        <Spinner
            android:id="@+id/ssCTW"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:entries="@array/statistic_aggr"

            />

        <Button
            android:id="@+id/ssGo"
            style="@style/ButtonStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@layout/button_add"
            android:onClick="OnClickGo"
            android:text="@string/title_go" />

    </LinearLayout>


</RelativeLayout>
